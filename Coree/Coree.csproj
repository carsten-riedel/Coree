<Project Sdk="Microsoft.NET.Sdk">
 
  <PropertyGroup>
    <Configurations>Debug;Release;PushLocal;PushMeta;PushNuget</Configurations>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <IncludeBuildOutput>false</IncludeBuildOutput>

    <DateTimeVersion>$([System.DateTime]::Now.ToString("yyyy").TrimStart('0')).$([System.DateTime]::Now.ToString("MM").TrimStart('0')).$([System.DateTime]::Now.ToString("dd").TrimStart('0')).$([System.DateTime]::Now.ToString("HHmm").TrimStart('0'))</DateTimeVersion>
    <AssemblyVersion>$(DateTimeVersion)</AssemblyVersion>
    <FileVersion>$(DateTimeVersion)</FileVersion>
    <VersionPrefix>$(DateTimeVersion)</VersionPrefix>
    <VersionSuffix />

    <Authors>Carsten Riedel</Authors>
    <Company>Private entity</Company>
    <Copyright>Copyright $([System.DateTime]::Now.ToString("yyyy")) Carsten Riedel</Copyright>
    <Owners>Carsten Riedel</Owners>

    <NeutralLanguage>en</NeutralLanguage>
    <Description>Coree Meta Package</Description>

    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/carsten-riedel/Coree</PackageProjectUrl>
    <PackageIconUrl>Icon URL</PackageIconUrl>
    <RepositoryUrl>https://github.com/carsten-riedel/Coree</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>extensions;common</PackageTags>
    <PackageReleaseNotes>Release</PackageReleaseNotes>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    
    <NugetKey Condition="Exists('$(SolutionDir)NuGetKey.nuget.props')">$([System.IO.File]::ReadAllText("$(SolutionDir)NuGetKey.nuget.props"))</NugetKey>
    <NugetKey Condition="!Exists('$(SolutionDir)NuGetKey.nuget.props')"></NugetKey>
    <NuGetFileShare Condition="Exists('$(SolutionDir)NuGetFileShare.nuget.props')">$([System.IO.File]::ReadAllText("$(SolutionDir)NuGetFileShare.nuget.props"))</NuGetFileShare>
    <NuGetFileShare Condition="!Exists('$(SolutionDir)NuGetFileShare.nuget.props')">C:\temp</NuGetFileShare>
    <NoWarn>NU5128</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <None Include="docs\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Coree.Extensions" Version="2022.11.17.2016" />
    
  </ItemGroup>

  <Target Name="PackAndPush" AfterTargets="Build" Condition="'$(Configuration)'=='PushMeta'">
    <Exec Command="dotnet pack --no-build -p:PackageVersion=$(DateTimeVersion)$(VersionSuffix) --configuration $(Configuration) --output &quot;$(NuGetFileShare)&quot;" />
    <Exec Command="dotnet nuget push &quot;$(NuGetFileShare)\*$(DateTimeVersion)*.nupkg&quot; -k $(NugetKey) -s https://api.nuget.org/v3/index.json" />
  </Target>

  <Target Name="Pack" AfterTargets="Build" Condition="'$(Configuration)'=='PushLocal'">
    <Exec Command="dotnet pack --no-build -p:PackageVersion=$(DateTimeVersion)$(VersionSuffix) --configuration $(Configuration) --output &quot;$(NuGetFileShare)&quot;" />
  </Target>

</Project>
